
{{!-- /app/clients/new/template.hbs --}}

<div class="crud-modal modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">{{title}}</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal">
          <div class="form-group">
            <label for="companyName" class="col-sm-3 control-label">Company Name:</label>
            <div class="col-sm-9">
              {{input type="text" class="form-control" value=client.companyName placeholder="Please insert company name"}}
            </div>
          </div>
          <div class="form-group">
            <label for="email" class="col-sm-3 control-label">Email:</label>
            <div class="col-sm-9">
              {{input type="email" class="form-control" value=email placeholder="Please insert company email"}}
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success" {{action 'submit'}}>{{submitButtonText}}</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">{{cancelButtonText}}</button>
      </div>
    </div>
  </div>
</div>