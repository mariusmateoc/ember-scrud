
{{!-- /app/employees/template.hbs --}}

<div class="row page-header">
  <div class="col-xs-3">
    <h2>Employees</h2>
  </div>
  <div class="col xs-3 pull-right">
    <button type="button" class="btn btn-success">Add New Employee</button>
  </div>
</div>

<table class="table table-hover css-serial">
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Occupation</th>
    </tr>
  </thead>
  <tbody>
    {{#each}}
      {{#link-to 'employee' this tagName='tr'}}
        <!--intentionally left blank-->
        <td class="text-bold"></td>
        <td>{{firstName}}</td>
        <td>{{lastName}}</td>
        <td>{{email}}</td>
        <td>{{occupation}}</td>
      {{/link-to}}
    {{/each}}
  </tbody>
</table>